@{
    ViewData["Title"] = "Word Counter";
}

<nav class="navbar navbar-expand-lg navbar-dark mt-3 bg-dark p-lg-3 rounded-pill">
    <div class="container">
        <a class="navbar-brand font-monospace" href="#">Word Counter</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        </div>
    </div>
</nav>

<div class="border-3 border-dark rounded-3 text-center align-content-center">
    <br/>
    <textarea class="font-monospace rounded-3 w-100 mt-4" onresize="bootstrap" id="input-text"></textarea>
    <br/>
    <button class="btn-success rounded-pill font-monospace m-auto  mt-3" id="count-words">Count Words</button>
    <br/>
    <p class="font-monospace m-auto mt-3" id="word-count"></p>
</div>

